{
	"compilerOptions": {
		"baseUrl": "src",
		"removeComments": true,
		"sourceMap": true,
		"target": "ESNext",
		"module": "commonjs",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowJs": false,
		"paths": {
			"common": ["common/*"],
			"views": ["views/*"],
			"modules": ["modules/*"]
		}
	},
	"exclude": ["node_modules", "wwwroot"]
}
